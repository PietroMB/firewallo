#!/bin/bash
printf "\nlan2wan..."
source $1
source $2

for i in $TCPPORT ; do
printf "."
if [ "$NFT" != "" ]  ; then
    $NFT "add rule ip filter lan2wan tcp dport $i log prefix \"ACCEPTED tcp $i lan2wan : \" counter accept" ; printf "tcp $i"
elif [ "$IPT" != "" ] ; then
    $IPT -t filter -A lan2wan -p tcp --dport $i -j ACCEPT ; printf "tcp $i"
fi
printf "."
done

for i in $UDPPORT ; do
printf "."
if [ "$NFT" != "" ]  ; then
    $NFT "add rule ip filter lan2wan udp dport $i log prefix \"ACCEPTED udp $i lan2wan : \" counter accept"; printf "udp $i"
elif [ "$IPT" != "" ] ; then
    $IPT -t filter -A lan2wan -p udp --dport $i -j ACCEPT ; printf "udp $i"
fi
printf "."
done
printf "...ok\n"
