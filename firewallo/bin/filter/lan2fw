#!/bin/bash
printf "\nlan2fw..."
source $1
source $2

for i in $TCPPORT ; do
printf "."
 if [ "$NFT" != "" ]  ; then
    $NFT "add rule ip filter lan2fw tcp dport $i counter accept"; printf "tcp $i"
elif [ "$IPT" != "" ] ; then 
    $IPT -t filter -A lan2fw -p tcp --dport $i -j ACCEPT ; printf "tcp $i"
fi
printf "."
done

for i in $UDPPORT ; do
printf "."
 if [ "$NFT" != "" ]  ; then
    $NFT "add rule ip filter lan2fw udp dport $i counter accept"; printf "udp $i"
elif [ "$IPT" != "" ] ; then 
    $IPT -t filter -A lan2fw -p udp --dport $i -j ACCEPT ; printf "udp $i"
fi
printf "."
done
printf "...ok\n"
