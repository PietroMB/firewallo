#!/bin/bash
printf "\ndmz2wan..."
source $1
source $2

for i in $TCPPORT ; do
printf "."
 if [ "$NFT" != "" ]  ; then
    $NFT "add rule ip filter dmz2wan tcp dport $i log prefix \"ACCEPTED tcp $i dmz2wan : \" counter accept"; printf "tcp $i"
elif [ "$IPT" != "" ] ; then 
    $IPT -t filter -A dmz2wan -p tcp --dport $i -j ACCEPT ; printf "tcp $i"
fi
printf "."
done

for i in $UDPPORT ; do
printf "."
 if [ "$NFT" != "" ]  ; then
    $NFT "add rule ip filter dmz2wan udp dport $i log prefix \"ACCEPTED udp $i dmz2wan : \" counter accept"; printf "udp $i"
elif [ "$IPT" != "" ] ; then 
    $IPT -t filter -A dmz2wan -p udp --dport $i -j ACCEPT ; printf "udp $i"
fi

printf "."
done
printf "...ok\n"
