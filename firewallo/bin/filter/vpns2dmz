#!/bin/bash
printf "\nvpns2dmz..."
source $1
source $2

for i in $TCPPORT ; do
printf "."
 if [ "$NFT" != "" ]  ; then
    $NFT "add rule ip filter vpns2dmz tcp dport $i counter accept"; printf "tcp $i"
elif [ "$IPT" != "" ] ; then 
    $IPT -t filter -A vpns2dmz -p tcp --dport $i -j ACCEPT ; printf "tcp $i"
fi
printf "."
done

for i in $UDPPORT ; do
printf "."
 if [ "$NFT" != "" ]  ; then
    $NFT "add rule ip filter vpns2dmz udp dport $i counter accept"; printf "udp $i"
elif [ "$IPT" != "" ] ; then 
    $IPT -t filter -A vpns2dmz -p udp --dport $i -j ACCEPT ; printf "udp $i"
fi
printf "."
done
printf "...ok\n"
